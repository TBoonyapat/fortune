  <% if(!currentUser) { %>
  <div class="topnav-right">
    
    <a  href="/login" method = 'POST' tabindex="-1">เข้าสู่ระบบ</a>
    <a  class="active"  href="/signup" method = 'POST' tabindex="-1">สมัครสมาชิก</a>
    <% } else { %>
      <!-- Welcome, you logged as <%= currentUser.username %> -->
      <div class="topnav-right">
      <a class="nav-item" href="/Profile/<%= currentUser._id %>" tabindex="-1">โปรไฟล์</a>
